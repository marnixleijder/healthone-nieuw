{% extends 'base.html.twig' %}

{% block body %}

    <div class="row gy-3">
        {% for category in categories %}
            <div class="col-sm-4 col-md-3">
                <div class="card">
                    <div class="card-body text-center">
                        <a href="{{ path('category', {'id':category.id}) }}">
                            <img src="{{ asset(category.picture)}}" alt="No picture found" class="img-fluid center-block">
                        </a>
                        <div class="card-title mb-3">{{ category.name }}</div>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>

{% endblock %}

{% block title %}

{% endblock %}

